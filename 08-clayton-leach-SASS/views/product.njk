{% extends "master.njk" %}}

{% block headsection %}
{{ super() }}

<style type="text/css">
{% for item in items %}
    .product-{{ item.id }}{
        background: url('{{item.image}}');
        background-size: cover;
        background-position: center;
    }
{% else %}

{% endfor %}
</style>
{% endblock %}

{% block content %}
<section class="content-section">
    <h1>Travel Packages</h1>
    <hr>
    <div class="row">
    {% for item in items %}
        <div class="small-12 medium-6 large-4 column">
            <div class="product-wrapper">
                <div class="row">
                    <div class="small-12 medium-12 large-12 column">
                        <h2 class="product-header">{{ item.title }}</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="small-12 medium-12 large-12 column product-image product-{{ item.id }}"></div>
                </div>
                <h2 class="product-price">${{ item.price }}</h2>
                <p class="product-description">{{ item.description }}</p>
                <button type="button" name="button" class="form-button">Book Now!</button>
            </div>
        </div>
    {% else %}
        Null
    {% endfor %}
    </div>
</section>
{% endblock %}
