{% extends "master.njk" %}}

{% block content %}
<section class="content-section">
    <div class="row">
        <div class="small-12 medium-6 large-6 column">
            <div class="form-wrapper">
                <h1>Contact Us!</h1>
                <hr>
                <form>
                    <label for="name" class="form-label">Name</label><input class="form-input-line" type="text" name="name" placeholder="John Smith">
                    <label for="email" class="form-label">E-Mail</label><input class="form-input-line" type="text" name="email" placeholder="John.Smith@example.com">
                    <hr>
                    <textarea class="form-text-area" name="comment-text" rows="8" cols="40"></textarea><br>
                    <button type="button" name="form-submit" class="form-button">Submit</button>
                </form>
            </div>
        </div>
        <div class="small-12 medium-6 large-6 column">
            <div class="form-wrapper">
                <iframe width="100%" height="350px" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJua43vOZvcVMR9KUaMMurqtY&key=AIzaSyCw3tdi95R7iIezyiMwJX22ULOSETP-LHs" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>
{% endblock %}
